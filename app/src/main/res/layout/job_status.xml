<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/schedule"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin"
    cardview:cardCornerRadius="5dp"
    cardview:cardElevation="5dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingEnd="10dp"
        android:id="@+id/root"
        android:paddingLeft="13dp"
        android:paddingRight="10dp"
        android:paddingStart="13dp"
        android:paddingTop="5dp">
        <TextView
            android:id="@+id/jobidhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/job_desc_content"
            android:textSize="12sp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jobid"
            android:layout_toRightOf="@+id/jobidhead"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/job_desc_content"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/jobdesig"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content"
            android:textColor="@color/fab_icon"
            android:text=""
            android:layout_below="@+id/jobidhead"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/sep"
            android:layout_below="@+id/jobdesig"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:background="@color/fab_icon" />

        <TextView
            android:id="@+id/jobapply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sep"
            android:textColor="@color/job_desc_content"
            android:textSize="12sp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/jobapply_on"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/jobapply"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/fab_icon"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_below="@+id/sep"
            android:textSize="16sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

