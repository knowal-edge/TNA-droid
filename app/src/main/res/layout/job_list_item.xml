<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/schedule"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin"
    cardview:cardCornerRadius="5dp"
    cardview:cardElevation="5dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/root"
        >
        <TextView
            android:id="@+id/jobidhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/job_desc_content"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
           />

        <TextView
            android:id="@+id/jobid"
            android:layout_toRightOf="@+id/jobidhead"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/job_desc_content"
            android:textSize="10sp"
             />

        <TextView
            android:id="@+id/jobdesig"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/fab_icon"
            android:layout_below="@+id/jobidhead"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/jobexp"
            android:layout_toRightOf="@+id/jobdesig"
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:gravity="right"
            android:text=""
            android:layout_marginRight="16dp"
            android:layout_height="wrap_content"
            android:textColor="@color/fab_icon"
            android:layout_below="@+id/jobidhead"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/sep"
            android:layout_below="@+id/jobdesig"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:background="@color/fab_icon" />



        <TextView
            android:id="@+id/jobskillhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sep"
            android:textColor="@color/job_desc_content"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/jobskill"
            android:layout_toRightOf="@+id/jobskillhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text=""
            android:textColor="@color/job_desc_content"
            android:layout_below="@+id/sep"
            android:textSize="12sp" />
        <ImageView
            android:id="@+id/joblochead"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/jobskillhead"
            />
        <TextView
            android:id="@+id/jobloc"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/joblochead"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="10dp"
            android:text=""
            android:layout_height="wrap_content"
            android:textColor="@color/job_desc_content"
            android:layout_below="@+id/jobskillhead"
            android:textSize="12sp" />
        </RelativeLayout>


        <Button
            android:id="@+id/btn_expand_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent"
            android:textSize="10sp"
            android:textStyle="bold"
             />

        <!--<ImageView
            android:id="@+id/btn_more"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:src="@drawable/more_icon" />-->


</LinearLayout>

</android.support.v7.widget.CardView>

